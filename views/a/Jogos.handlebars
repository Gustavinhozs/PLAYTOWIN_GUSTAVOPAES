<h1>Cadastre-se</h1>

<a href="/jogos/novo">Cadastre os Jogos Aqui.</a>
<table border="1">
    <tr>
        <td>ID</td>
        <td>Titulo</td>
        <td>Descrição</td>
        <th>Ações</th>
    </tr>
    {{#each jogos}}
    <tr>
        <td>{{this.id}}</td>
        <td>{{this.titulo}}</td>
        <td>{{this.descricao}}</td>
        <td>
            <form action="/jogos/excluir" method="post">
                <input name="id" type="hidden" value="{{this.id}}" />
                <input type="submit" value="Excluir">
            </form>
            <a href="/jogos/{{this.id}}/conquistas">Clique aqui para ver suas conquistas</a>
        </td>
    </tr>
    {{/each}}
</table>